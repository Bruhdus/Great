<% if (locals.errors && locals.errors.register) { %>
	<% locals.errors.register.forEach(function(error) { %>
		<p class="alert alert-primary" role="alert"><%= error %></p>
	<% }) %>
<% } %>
<%- include('partials/header'); %> 
<div id="register-page">
    <h1 class="navbar-brand font-weight-bold text-uppercase" id="logo">Great</h1>
    <div>
        <form action="/register" method="post" id="form">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <input type="password" name="passwordConfirm" placeholder="Confirm Password">
            <button type="submit">Register</button>
            <a href="/login">Login</a>
        </form>
    </div>
</div>
<%- include('partials/footer'); %>